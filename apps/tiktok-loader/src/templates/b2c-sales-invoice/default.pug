doctype html
html
    head
        meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")

        style.
            html, body {
                font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue";
                font-size: 9px;
                letter-spacing: 0.5;
                display: block;
                line-height: 1.3;
                margin: 0;
            }

            div {
                overflow: hidden;
            }

            table, tbody {
                max-height: 100%;
                border-collapse: collapse;
                border-spacing: 0;
                vertical-align: top;
                padding: 0px;
                margin: 0;
                table-layout: fixed;
            }

            td, th {
                padding: 0px;
                padding-left: 3px;
                word-wrap: break-word;
            }

            img {
                max-height: 14mm;
                max-width: 48mm;
                object-fit: scale-down;
            }

            p {
                padding: 0;
                margin: 0;
                font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue";
            }

            .highlight {
                background-color: #bababa;
                border-left: 1px solid white;
                border-right: 1px solid white;
                -webkit-print-color-adjust: exact;
                font-weight: bold;
                padding: 3px;
            }

            .top-border {
                border-top: 1px solid black;
            }

            .bottom-border {
                padding-bottom: 2px;
                border-bottom: 1px solid #bababa;
            }

            .right-padding {
                padding-right: 4%;
            }

            .container {
                width: 147mm;
                height: 217mm;
                margin-top: 5mm;
                margin-left: 5mm;
                margin-right: 5mm;
                margin-bottom: 0mm;
                display: inline-block;
                page-break-after: always;
            }

            .logo {
                width: 100%%;
                height: 8%;
                padding: 0;
            }
            
            .store-details {
                height: 8%;
                width: 100%%;
            }

            .billing {
                width: 100%;
                height: 22.5%;
            }

            .products {
                width: 100%;
                height: 64.5%;
                font-size: 8px;
            }

            .final_page {
                width: 100%;
                height: 46.5%;
                font-size: 8px;
            }
            
            .permit {
                width: 100%;
                height: 24%;
                line-height: 1.3;
                font-size: 8px;
            }

            .permit > p {
                text-align: center;
            }

            .middle {
                text-align: center;
                vertical-align: middle;
            }

            .amount-due {
                padding-top: 3px;
                padding-bottom: 3px;
            }

            .left-border {
                border-left: #bababa;
            }

            .right-border {
                border-right: #bababa;
            }

            .prices {
                text-align: right;
            }

            .emphasize {
                font-weight: bold;
            }

            .double-border {
                border-bottom-style: double;
                padding-top: 3px;
                font-weight: bold;
            }

            .padding3 {
                padding-top: 3px;
            }

            .padding10 {
                padding-top: 10px;
            }

            .validity {
                font-weight: bold; 
                text-align: center; 
                /*padding-left: 5%;*/
            }

            .headers {
                text-align: left;
                font-size': 10px;
            }

            .sales-invoice {
                padding-top: 2mm; 
                padding-bottom: 4mm;
                font-size: 15px;
                font-weight: bold;
            }

            .font10 {
                font-size: 10px;
            }

            .left-padding {
                padding-left: 0;
            }

            .footer-table {
                width: 100%;
                border: 0;
                padding: 0;
            }

            .left_column {
                float: left;
                width: 48%;
            }

            .right_column {
                float: left;
                width: 51%;
                margin-left: 5px;
            }

            .header_left {
                float: left;
                width: 70%;
            }

            .header_right {
                float: left;
                width: 29%;
                margin-left: 5px;
            }

            .sub_column {
                float: left;
                width: 50%;
            }

            ul, li {
                margin-left: 7px;
                padding: 0;
                list-style-type: square;
            }

            table.outlined {
                border: 1px solid black;
                border-spacing: 3px;
                border-collapse: separate;
            }

            table.customer_details {
                border-spacing: 5px;
                border-collapse: separate;
            }

            table.simple_outlined {
                border: 1px solid black;
            }

            td.yellow_header {
                background-color: #FCEE91;
                border: 1px solid black;
                padding: 3px;
            }

            td.yellow_cell {
                background-color: #FDF7C8;
                border: 1px solid black;
                padding: 3px;
                text-align: left;
            }

            td.mode_of_payment {
                background-color: #FCEE91;
                padding: 3px;
            }

            td.justcolor {
                background-color: #FCEE91;
            }

            table.mode_of_payment {
                border: 1px solid black;
            }

            .signature {
                word-spacing: 1px;
                letter-spacing: 0px;
            }

            td.case_highlight {
                background-color: #bababa;
                border-top: 1px solid white;
                border-right: 1px solid white;
                -webkit-print-color-adjust: exact;
            }

            td.piece_highlight {
                background-color: #bababa;
                border-top: 1px solid white;
                -webkit-print-color-adjust: exact;
            }

    body
        each _package in packages
            div(class="container")
                include _header
                block content
                include _footer
